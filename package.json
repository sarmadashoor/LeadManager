{
  "name": "lead-manager-workspace",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:orchestrator": "npm run dev -w @lead-manager/orchestrator",
    "dev:chat": "npm run dev -w @lead-manager/chat",
    "dev:frontend": "npm run dev -w @lead-manager/frontend",
    "dev:all": "npm run dev --workspaces",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "migrate": "npm run migrate -w @lead-manager/orchestrator",
    "migrate:latest": "npm run migrate:latest -w @lead-manager/orchestrator",
    "migrate:rollback": "npm run migrate:rollback -w @lead-manager/orchestrator"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "@types/node": "^20.10.0"
  }
}
